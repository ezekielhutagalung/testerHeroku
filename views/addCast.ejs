    <h1>Add Cast</h1>
    <%- include('partial/navbar') %>
        <br>
        <form action="/casts/add" method="POST">
            <div class="form-group">
                <label for="first_name">First Name</label>
                <input type="text" class="form-group" id="first_name" name="first_name" placeholder="e.g john">
            </div>
            <br>
            <div class="form-group">
                <label for="last_name">Last Name</label>
                <input type="text" class="form-group" id="last_name" name="last_name" placeholder="e.g Doe">
            </div>
            <br>
            <div class="form-group">
                <label for="birth_year">Birth Year</label>
                <input type="number" class="form-group" id="birth_year" name="birth_year" placeholder="1972">
            </div>
            <br>
            <div class="form-group">
                <label for="phone_number">Phone Number</label>
                <input type="text" class="form-group" id="phone_number" name="phone_number" placeholder="082455637">
            </div>
            <br>
            <div class="form-group">
                <label for="gender">Gender</label>
                <br>
                <input type="radio" id="male" name="gender" value="male">
                <label for="male">Male</label><br>
                <input type="radio" id="female" name="gender" value="female">
                <label for="female">Female</label><br>
                <input type="radio" id="other" name="gender" value="other">
                <label for="other">Other</label>
            </div>
            <br>
              <button type="submit" class="btn btn-primary">Save</button>
              <button type="button" class="btn btn-danger" onclick="history.back()">Cancel</button>
        </form>


</body>

