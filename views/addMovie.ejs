    <form action="/movies/add" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name"  name ="name" placeholder="e.g 12 Angry Men" required>

    </div>
    <br>
      <div class="form-group">
