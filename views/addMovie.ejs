            <option selected disabled>Please Select Genre</option>
            <option value="Animation">Animasi</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Horor">Horor</option>
            <option value="Religius">Religi</option>
            <option value="Thriller">Thriller</option>
        </select>
    </div>
    <br>
    <div class="form-group">
      <label for="Rating">Rating</label>
      <input type="number" class="form-control" id="Rating" name="Rating" placeholder="e.g 1-5" required>
    </div>
    <br>
      <button type="submit" class="btn btn-primary">Save</button>
      <button type="button" class="btn btn-danger" onclick="history.back()">Cancel</button>
    </form>
    
    
    
    
    
    
